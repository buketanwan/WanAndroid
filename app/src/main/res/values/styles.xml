<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <!-- Set menu background and text color -->
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <!--Theme Style-->
    <style name="ThemeTitleTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="android:background">@color/transparent</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowBackground">@color/white_255</item>
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>
        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
